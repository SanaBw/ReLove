<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sanida.relove.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_postFragment"
            app:destination="@id/postFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.sanida.relove.ui.shop.ShopFragment"
        tools:layout="@layout/fragment_shop" />

    <fragment
        android:id="@+id/navigation_outfits"
        android:name="com.sanida.relove.ui.outfits.OutfitsFragment"
        tools:layout="@layout/fragment_outfits" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.sanida.relove.ui.outfits.OutfitsFragment"
        tools:layout="@layout/fragment_outfits" />
    <fragment
        android:id="@+id/postFragment"
        android:name="com.sanida.relove.ui.home.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.sanida.relove.MainActivity"
        android:label="MainActivity" />
</navigation>